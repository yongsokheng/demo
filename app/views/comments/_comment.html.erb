<div class='comment-list'>
	<div class='entry-avatar'>
	    <%= link_to gravatar_for(current_user , size: 50), current_user %>
	    <span class="user"><%= link_to current_user.name, current_user %></span><br/>
	    <span class="user"><%= comment.comment %></span><br/>
	    <span class="entry-timespan"><%= time_ago_in_words(comment.created_at) %></span><br/>
	    <% if current_user?(comment.user) %>
		      <%= link_to "Delete", comment, method: :delete,
		                                       data: { confirm: "You sure?" } %>
		      <%= link_to 'Edit', edit_comment_path(comment.id) %>
    	<% end %>
  	</div>

</div>