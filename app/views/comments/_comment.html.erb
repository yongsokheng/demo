<div class="media comment-list">
  <div class="media-left media-middle">
     <%= link_to gravatar_for(comment.user , size: 50), comment.user %>
  </div>
  <div class="media-body">
     <div class="user"><%= link_to comment.user.name, comment.user %></div>
	 <div class="user"><%= comment.comment %></div>
	 <div class="entry-timespan"><%= time_ago_in_words(comment.created_at) %></div>
     <div>
     	<% if current_user?(comment.user) %>
	      <%= link_to "Delete", comment, method: :delete,
	                                       data: { confirm: "You sure?" } %>
	      <%= link_to 'Edit', edit_comment_path(comment.id) %>
	 	<% end %>
     </div>
     

 </div>
</div>