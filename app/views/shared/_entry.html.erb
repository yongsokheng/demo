<div id="entry-<%= @entry.id %>">
 <div class='entry'> 
  <div class='entry-avatar'>
    <%= link_to gravatar_for(@entry.user, size: 50), @entry.user %>
    <span class="user"><%= link_to @entry.user.name, @entry.user %></span><br/>
    <span class="entry-timespan"><%= @entry.created_at.strftime("%d-%B-%Y at %T") %></span>
  </div>
  
  <div class='errors-<%= @entry.id %>'></div>
  <div class="content-<%= @entry.id %> clearfix">
    <b>Title: <%= @entry.title %></b><br/>
    <%= @entry.body %>
  </div>
    
  <div>
    <% if current_user?(@entry.user) %>
      <%= link_to "Delete", "#myModal-#{@entry.id}", "data-toggle"=>"modal" %>
      <%= link_to 'Edit', edit_entry_path(@entry.id), remote: true %>
    <% end %>
  </div>
 </div> 
</div>

<%= render 'shared/modal_delete', entry: @entry, status: false %> 